<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" value="{{keyword}}" placeholder="輸入餐廳、分類"
            aria-label="Restaurant Name..." value="" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major rounded" type="submit" id="search-button"><i
                class="fas fa-search"></i></button>
            <a href="" class="ml-2">
              <button class="btn btn-light"><i class="fas fa-plus"></i> 新增餐廳
              </button>
            </a>

          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <a href="./restaurants/{{this._id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>
              <div class="d-flex justify-content-around align-items-center ">
                <span class="badge badge-pill badge-danger font-weight-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>
                <a href="./restaurants/{{ this._id }}" class="btn btn-link">Detail</a>
                <a href="./restaurants/{{ this._id }}/edit" class="btn btn-link">Edit</a>
                <form action="./restaurants/{{ this._id }}/delete" method="POST" style="display: inline;"
                  onsubmit="return confirm('是否確定刪除 {{this.name}} 餐廳?');">
                  <button type="submit" class="btn btn-danger">Delete</button>
                </form>
              </div>

            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>